  "version": "0.2.0",
  "configurations": [{
          "type": "node",
          "request": "launch",
          "name": "api-nodejs-dev",
          "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
          "program": "${workspaceFolder}/bin/www",
          "cwd": "${workspaceFolder}",
          "restart": true,
          "outputCapture": "std",
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "env": {
              "NODE_ENV": "development"
          }
      },
    ]
}